<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
    <shape
        android:shape="rectangle" >
        <gradient
            android:startColor="#bfbfbf"
            android:endColor="#FFD7D6D6"/>

        <size
            android:width="@dimen/rec_width"
            android:height="@dimen/rec_height"/>
        <corners
            android:topLeftRadius="60dp"
            android:bottomRightRadius="60dp"/>
    </shape>
    </item>
    <item
        android:right="7px">
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#03be2f"
                android:endColor="#4eff08"/>
            <size
                android:width="@dimen/rec_width"
                android:height="@dimen/rec_height"/>
            <corners
                android:topLeftRadius="60dp"
                android:bottomRightRadius="60dp"/>
        </shape>
    </item>
</layer-list>