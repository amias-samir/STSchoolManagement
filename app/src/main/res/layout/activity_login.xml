<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adsl4.stschoolmanagement.login.Login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/blur"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/sheshaya"
        android:layout_centerVertical="true"
        android:id="@+id/imgLogo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:id="@+id/edtWelcome"
        android:layout_centerInParent="true"
        android:textSize="50sp"
        android:textColor="#fff"
        android:layout_below="@+id/imgLogo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stay Close with your children!! "
        android:id="@+id/edtWelcomeMessage"
        android:layout_below="@id/edtWelcome"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:textColor="#fff"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtWelcomeMessage"
        android:id="@+id/txtImpPin"
        app:passwordToggleEnabled="true">
        <android.support.design.widget.TextInputEditText

            android:layout_below="@id/edtWelcomeMessage"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_transparent_round"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp"
            android:drawablePadding="10dp"
            android:id="@+id/edtEmail3"
            android:padding="7dp"
            android:text="3c5cfc31-f42c-4a6c-8225-8bfd16885610"
            android:textColor="#ffffff"
            android:ellipsize="start"
            android:inputType="textPassword"
            android:textStyle="bold|italic"
            android:textSize="30sp"
            android:textColorHint="#fff"
            android:hint="User ID"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:drawableStart="@drawable/ic_vpn_key_black_24dp"
            />
        <!--android:text="7d9aa896-6832-4615-9b40-65783a4a039d"-->
        <!--android:text="492b18ac-8cb3-4f68-907a-d459f8fad6f1"-->


    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtWrongPin"
        android:layout_below="@id/relSpin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ff0000"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relSpin"
            android:layout_centerInParent="true"
            android:id="@+id/prgLogin"
            />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtWrongPin"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/btn_login"
        android:background="@drawable/round_button_green"
        android:textColor="#fff"
        android:id="@+id/btnLogin"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtImpPin"
        android:id="@+id/relSpin"
        android:background="@drawable/round_button_transparent_round"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="20dp">
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:id="@+id/spnRole"
        android:entries="@array/spinnerItems"
        android:textAlignment="center"
        style="@style/Widget.AppCompat.DropDownItem.Spinner">

    </Spinner>
    </RelativeLayout>
    <TextView
        android:id="@+id/txtReg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:text="@string/no_login_id"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"/>
</RelativeLayout>
